<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_snackbar_notification"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/opensans_regular_custom"
        android:text="Notifications appear to be disabled"
        android:textColor="?attr/invertedTextColor"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageView12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0"
        android:background="@null"
        android:contentDescription="Open notification settings"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_settings_outline"
        app:tint="?attr/invertedIconTint"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>