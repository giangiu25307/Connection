<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_notification</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="blackWhite">@android:color/black</item>
        <item name="whiteBlack">@android:color/white</item>
        <item name="layoutBackground">@color/backgroundColor</item>
        <item name="itemBackground">@color/surfaceColor</item>
        <item name="invertedItemBackground">@color/darkSurfaceColor</item>
        <item name="secondItemBackground">@color/secondSurfaceColor</item>
        <item name="invertedSecondItemBackground">@color/darkSecondSurfaceColor</item>
        <item name="textColor">@android:color/black</item>
        <item name="secondaryTextColor">@color/secondaryTextColor</item>
        <item name="invertedTextColor">@android:color/white</item>
        <item name="invertedSecondaryTextColor">@color/darkSecondaryTextColor</item>
        <item name="hintColor">@color/hintColor</item>
        <item name="iconTint">@android:color/black</item>
        <item name="invertedIconTint">@android:color/white</item>
        <item name="bottomUnselectedColor">@color/bottomUnselectedColor</item>
        <item name="topLineBottomSheetColor">@color/topLineBottomSheetColor</item>
        <item name="toolbarAndSettingsCardIconColor">@color/toolbarAndSettingsCardIconColor</item>
        <item name="actionModeBackground">@color/backgroundColor</item>

    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="android:colorPrimary">@color/darkColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="blackWhite">@android:color/white</item>
        <item name="whiteBlack">@android:color/black</item>
        <item name="layoutBackground">@color/darkBackgroundColor</item>
        <item name="itemBackground">@color/darkSurfaceColor</item>
        <item name="invertedItemBackground">@color/surfaceColor</item>
        <item name="secondItemBackground">@color/darkSecondSurfaceColor</item>
        <item name="invertedSecondItemBackground">@color/secondSurfaceColor</item>
        <item name="textColor">@android:color/white</item>
        <item name="secondaryTextColor">@color/darkSecondaryTextColor</item>
        <item name="invertedTextColor">@android:color/black</item>
        <item name="invertedSecondaryTextColor">@color/secondaryTextColor</item>
        <item name="hintColor">@color/darkHintColor</item>
        <item name="iconTint">@android:color/white</item>
        <item name="invertedIconTint">@android:color/black</item>
        <item name="bottomUnselectedColor">@color/darkBottomUnselectedColor</item>
        <item name="topLineBottomSheetColor">@color/darkTopLineBottomSheetColor</item>
        <item name="toolbarAndSettingsCardIconColor">@color/darkToolbarAndSettingsCardIconColor</item>
        <item name="actionModeBackground">@color/darkBackgroundColor</item>

    </style>

    <!-- Screen title -->
    <style name="screenTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/opensans_semibold_custom</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Map buttons -->
    <style name="mapButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/opensans_regular_custom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:background">@drawable/bg_map_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Gender in map's filter -->
    <style name="genderUnselected" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_gender_filter_unselected</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingHorizontal">17.5dp</item>
        <item name="android:paddingVertical">7.5dp</item>
    </style>

    <style name="genderSelected" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_gender_filter_selected</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingHorizontal">17.5dp</item>
        <item name="android:paddingVertical">7.5dp</item>
    </style>

    <!-- Age in map's filter -->
    <style name="ageInputStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_age_input</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor_drawable</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">7.5dp</item>
    </style>

    <!-- Cancel and apply/confirm dialog's buttons -->
    <style name="cancelButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_cancel_button</item>
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="applyConfirmButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_apply_confirm_buttons</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Cancel and apply/confirm dialog's buttons -->
    <style name="cancelButton2" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_cancel_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:fontFamily">@font/opensans_bold_custom</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="applyConfirmDeleteButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_apply_confirm_buttons</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/opensans_bold_custom</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Settings card -->
    <style name="settingsGroupTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:fontFamily">@font/opensans_regular_custom</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="titleSettingsCard" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/opensans_semibold_custom</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="subTitleSettingsCard" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:fontFamily">@font/opensans_regular_custom</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="customBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bs_new_chat</item>
    </style>

    <style name="inputDataStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/bg_input_data</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/opensans_light_custom</item>
        <item name="android:padding">12.5dp</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor_drawable</item>
    </style>

    <style name="showHidePasswordImageStyle">
        <item name="android:background">@drawable/bg_show_hide_password</item>
        <item name="android:tint">?attr/hintColor</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="nextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_next_button</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="signupButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_signup_button</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="permissionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_permission_button</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="dateMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_date_message_layout</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">2.5dp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

