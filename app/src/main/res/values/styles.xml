<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- SplashScreen -->
        <item name="splashScreenLayoutBackground">@android:color/white</item>

        <!-- Login -->
        <item name="inputData">@color/lightWhite</item>
        <item name="inputDataHintColor">@color/darkHintcolor</item>
        <item name="nextButton">@color/mediumBlack</item>

        <!-- Toolbar and bottomNavigation -->
        <item name="toolbarBackground">@android:color/white</item>
        <item name="bottomMenuBackground">@android:color/white</item>

        <!-- General layout -->
        <item name="whiteLayoutBackground">@android:color/white</item>
        <item name="layoutBackground">@color/lightWhite</item>

        <!-- Chat -->
        <item name="dateMessageLayoutBackgroundColor">@android:color/white</item>
        <item name="messageInputColor">@android:color/white</item>
        <item name="messageInputBorder">@color/mediumBlack</item>
        <item name="messageInputElevation">0dp</item>

        <!-- Settings -->
        <item name="groupSettingsBackground">@android:color/white</item>
        <item name="groupOptionSettingsBackground">@color/mediumWhite</item>

        <!-- Text -->
        <item name="textColor">@android:color/black</item>
        <item name="invertedTextColor">@android:color/white</item>

        <!-- Icon -->
        <item name="iconTint">@android:color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/reversedColorPrimary</item>
        <item name="colorPrimaryDark">@color/reversedColorPrimaryDark</item>
        <item name="colorAccent">@color/reversedColorAccent</item>

        <!-- SplashScreen -->
        <item name="splashScreenLayoutBackground">@color/mediumBlack</item>

        <!-- Login -->
        <item name="inputData">@color/lightBlack</item>
        <item name="inputDataHintColor">@color/lightHintColor</item>
        <item name="nextButton">@android:color/white</item>

        <!-- Toolbar and bottomNavigation -->
        <item name="toolbarBackground">@color/mediumBlack</item>
        <item name="bottomMenuBackground">@color/mediumBlack</item>

        <!-- General layout -->
        <item name="whiteLayoutBackground">@color/mediumBlack</item>
        <item name="layoutBackground">@color/lightBlack</item>

        <!-- Chat -->
        <item name="dateMessageLayoutBackgroundColor">@color/lightBlack</item>
        <item name="messageInputColor">@color/mediumBlack</item>
        <item name="messageInputBorder">@color/mediumBlack</item>
        <item name="messageInputElevation">1dp</item>

        <!-- Settings -->
        <item name="groupSettingsBackground">@color/mediumBlack</item>
        <item name="groupOptionSettingsBackground">@color/lightLightBlack</item>

        <!-- Text -->
        <item name="textColor">@android:color/white</item>
        <item name="invertedTextColor">@android:color/black</item>

        <!-- Icon -->
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="confirmAlertButton" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/confirm_alert_button_background</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="inputDataStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/input_data_background</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/inputDataHintColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="showHidepasswordImageStyle">
        <item name="android:background">@drawable/show_hide_password_background</item>
        <item name="android:tint">?attr/inputDataHintColor</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="nextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/next_button_background</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="signupButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/signup_button_background</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="selectedChatSelectorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/chat_selector_btn_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="unselectedChatSelectorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_20dp_background</item>
    </style>

    <style name="dateMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/date_message_layout_background</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">2.5dp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

</resources>
