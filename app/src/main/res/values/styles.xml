<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- SplashScreen -->
        <item name="splashScreenLayoutBackground">@color/colorPrimary</item>

        <!-- Login -->
        <item name="inputData">@color/darkWhite</item>
        <item name="inputDataHintColor">@color/darkHintcolor</item>
        <item name="nextButton">@color/black2</item>

        <!-- Toolbar -->
        <item name="toolbarBackground">@color/colorPrimary</item>
        <item name="toolbarIcon">@color/toolbarIconColorLight</item>

        <!-- BottomNavigation -->
        <item name="bottomMenuBackground">@android:color/white</item>
        <item name="bottomMenuIcon">@color/lightGray</item>
        <item name="bottomUnselectedIcon">@color/bottomUnselectedColorLight</item>

        <!-- General layout -->
        <item name="layoutBackground">@color/colorPrimary</item>
        <item name="blackWhiteLayoutBackground">@android:color/white</item>

        <!-- Chat -->
        <item name="dateMessageLayoutBackgroundColor">@android:color/white</item>
        <item name="messageInputColor">@android:color/white</item>
        <item name="messageInputBorder">@color/black2</item>
        <item name="messageInputElevation">0dp</item>

        <!-- Settings -->
        <item name="groupSettingsBackground">@android:color/white</item>
        <item name="groupOptionSettingsBackground">@color/mediumWhite</item>

        <!-- Text -->
        <item name="textColor">@android:color/black</item>
        <item name="invertedTextColor">@android:color/white</item>

        <!-- Icon -->
        <item name="iconTint">@android:color/black</item>
        <item name="invertedIconTint">@android:color/white</item>

        <!-- Dialog -->
        <item name="cancelDialogColor">@color/cancelDialogColorLight</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- SplashScreen -->
        <item name="splashScreenLayoutBackground">@color/darkColorPrimary</item>

        <!-- Login -->
        <item name="inputData">@color/black3</item>
        <item name="inputDataHintColor">@color/lightHintColor</item>
        <item name="nextButton">@android:color/white</item>

        <!-- Toolbar -->
        <item name="toolbarBackground">@color/darkColorPrimary</item>
        <item name="toolbarIcon">@color/toolbarIconColorDark</item>

        <!-- BottomNavigation -->
        <item name="bottomMenuBackground">@android:color/black</item>
        <item name="bottomMenuIcon">@color/darkGray</item>
        <item name="bottomUnselectedIcon">@color/bottomUnselectedColorDark</item>

        <!-- General layout -->
        <item name="layoutBackground">@color/darkColorPrimary</item>
        <item name="blackWhiteLayoutBackground">@android:color/black</item>

        <!-- Chat -->
        <item name="dateMessageLayoutBackgroundColor">@color/black3</item>
        <item name="messageInputColor">@color/black2</item>
        <item name="messageInputBorder">@color/black2</item>
        <item name="messageInputElevation">1dp</item>

        <!-- Settings -->
        <item name="groupSettingsBackground">@color/lightGray</item>
        <item name="groupOptionSettingsBackground">@color/black4</item>

        <!-- Text -->
        <item name="textColor">@android:color/white</item>
        <item name="invertedTextColor">@android:color/black</item>

        <!-- Icon -->
        <item name="iconTint">@android:color/white</item>
        <item name="invertedIconTint">@android:color/black</item>

        <!-- Dialog -->
        <item name="cancelDialogColor">@color/cancelDialogColorDark</item>
    </style>
    
    <style name="ScreenTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_20dp_background</item>
    </style>

    <style name="confirmAlertButton" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/confirm_alert_button_background</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="inputDataStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/input_data_background</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/inputDataHintColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">12.5dp</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor_drawable</item>
    </style>

    <style name="showHidepasswordImageStyle">
        <item name="android:background">@drawable/show_hide_password_background</item>
        <item name="android:tint">?attr/inputDataHintColor</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="nextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/next_button_background</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="signupButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/signup_button_background</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="permissionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_permission_button</item>
        <item name="android:textColor">?attr/invertedTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="selectedChatSelectorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/chat_selector_btn_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="unselectedChatSelectorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="dateMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/date_message_layout_background</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">2.5dp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

</resources>
