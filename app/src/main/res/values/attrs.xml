<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="themeAttrs">
        <!-- SplashScreen -->
        <attr name="splashScreenLayoutBackground" format="color"/>

        <!-- Login -->
        <attr name="inputData" format="color"/>
        <attr name="inputDataHintColor" format="color"/>
        <attr name="nextButton" format="color"/>

        <!-- Toolbar and bottomNavigation -->
        <attr name="toolbarBackground" format="color"/>
        <attr name="toolbarIcon" format="color"/>
        <attr name="bottomMenuBackground" format="color"/>
        <attr name="bottomMenuIcon" format="color"/>
        <attr name="bottomUnselectedIcon" format="color"/>

        <!-- General layout -->
        <attr name="layoutBackground" format="color"/>
        <attr name="blackWhiteLayoutBackground" format="color"/>

        <!-- Map layout -->
        <attr name="mapFilterCardBackground" format="color"/>
        <attr name="topLineBottomSheet" format="color"/>

        <!-- Chat -->
        <attr name="requestCardBackground" format="color"/>
        <attr name="chatCardBackground" format="color"/>
        <attr name="dateMessageLayoutBackgroundColor" format="color"/>
        <attr name="messageInputColor" format="color"/>
        <attr name="messageInputBorder" format="color"/>
        <attr name="messageInputElevation" format="dimension"/>

        <!-- Settings -->
        <attr name="groupSettingsBackground" format="color"/>
        <attr name="groupOptionSettingsBackground" format="color"/>
        <attr name="settingsProfileButtonBackground" format="color"/>
        <attr name="settingsGroupTitleColor" format="color"/>
        <attr name="settingsCardColor" format="color"/>
        <attr name="settingsCardIconColor" format="color"/>

        <!-- Text -->
        <attr name="textColor" format="color"/>
        <attr name="invertedTextColor" format="color"/>
        <attr name="subTitleGroup" format="color"/>

        <!-- Icon -->
        <attr name="iconTint" format="color"/>
        <attr name="invertedIconTint" format="color"/>

        <!-- Dialog -->
        <attr name="cancelDialogColor" format="color"/>
        <attr name="cancelButtonBackground" format="color"/>
        <attr name="cancelButtonText" format="color"/>
    </declare-styleable>

</resources>